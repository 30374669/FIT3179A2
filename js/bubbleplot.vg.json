{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 200,
  "padding": {"left": 20, "right": 5, "top": 20, "bottom": 0},
  "autosize": "pad",
  "signals": [
    {"name": "strokeWidth", "value": 4},
    {"name": "color", "value": "both"}
  ],
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/30374669/FIT3179A2/main/data/file_top10_2019.csv",
      "format": {"type": "csv", "delimiter": ","}
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "table",
        "fields": ["Value_co2_emissions_kt_by_country"]
      },
      "range": [1000, 30000]
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {"data": "table", "field": "Value_co2_emissions_kt_by_country"},
      "range": ["#cef3ff", "#8acbec", "#009edf", "#0074ca", "#0047ab"]
    },
    {
      "name": "text",
      "type": "ordinal",
      "domain": {"data": "table", "field": "Entity"}
    }
  ],
  "legends": [
    {
      "fill": "color",
      "size": "size",
      "clipHeight": 20,
      "title": "Carbon Monoxide Index",
      "encode": {
        "symbols": {"name": "legendSymbol"},
        "labels": {"name": "legendLabel", "text": {"field": "value"}}
      },
      "orient": "top-right",
      "titlePadding": 10,
      "offset": -100
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "name": "bubble",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "tooltip": {
            "signal": "{'Country': datum.Entity, 'Carbon Monoxide Level': datum.Value_co2_emissions_kt_by_country}"
          }
        },
        "update": {
          "size": {
            "field": "Value_co2_emissions_kt_by_country",
            "scale": "size"
          },
          "fill": {
            "field": "Value_co2_emissions_kt_by_country",
            "scale": "color"
          },
          "strokeWidth": {"value": 1}
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {"force": "collide", "radius": {"expr": "sqrt(datum.size) / 2"}}
          ]
        }
      ]
    },
